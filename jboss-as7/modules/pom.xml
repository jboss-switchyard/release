    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <configuration>
                    <!-- Avoid processing @ delimeter, we use that in license headers -->
                    <useDefaultDelimiters>false</useDefaultDelimiters>
                    <delimiters>
                        <delimiter>${*}</delimiter>
                    </delimiters>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-jbpm-xsds</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jbpm</groupId>
                                    <artifactId>jbpm-bpmn2</artifactId>
                                    <version>${jbpm.version}</version>
                                    <type>jar</type>
                                </artifactItem>
                            </artifactItems>
                            <includes>META-INF/*.xsd</includes>
                            <outputDirectory>${build.directory}/jbpm-xsds</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.switchyard</groupId>
                <artifactId>maven-mergeassembly-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <id>merge-assemblies</id>
                        <phase>generate-sources</phase>
                        <goals><goal>mergeassembly</goal></goals>
                        <configuration>
                            <baseAssembly>${basedir}/assembly.xml</baseAssembly>
                            <finalAssembly>${basedir}/target/merged-assembly.xml</finalAssembly>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>make-jbpm-xsds-assembly</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                        <configuration>
                            <finalName>jbpm-bpmn2</finalName>
                            <descriptors>
                                <descriptor>${basedir}/src/main/resources/switchyard/components/bpm/jbpm-xsds-assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attached</goal>
                        </goals>
                        <configuration>
                            <finalName>switchyard.deployer</finalName>
                            <descriptors>
                                <descriptor>${basedir}/target/merged-assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>

