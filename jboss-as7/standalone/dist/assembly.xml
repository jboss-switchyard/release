<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id></id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>

    <!-- We are not ready for domain config yet -->
    <fileSets>
        <fileSet>
            <directory>${staging.jboss.dir}</directory>
            <excludes>
                <exclude>bin/**</exclude>
                <exclude>welcome-content/index.html</exclude>
                <exclude>standalone/**/standalone*.xml</exclude>
                <exclude>domain/</exclude>
                <exclude>modules/com/h2database/h2/main/h2-1.2.*.jar</exclude>
                <exclude>META-INF/</exclude>
                <exclude>xsl/</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <outputDirectory>${distro.root.dir}</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${staging.jboss.dir}/bin</directory>
            <excludes>
                <exclude>domain.*</exclude>
                <exclude>*.sh</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <lineEnding>keep</lineEnding>
            <outputDirectory>${distro.root.dir}bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${staging.jboss.dir}/bin</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <excludes>
                <exclude>domain.*</exclude>
            </excludes>
            <fileMode>755</fileMode>
            <lineEnding>keep</lineEnding>
            <outputDirectory>${distro.root.dir}bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.outputDirectory}/welcome-content</directory>
            <outputDirectory>${distro.root.dir}welcome-content</outputDirectory>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <directory>${staging.dir}</directory>
            <outputDirectory>${distro.root.dir}standalone/configuration</outputDirectory>
            <includes>
                <include>standalone*.xml</include>
            </includes>
            <fileMode>644</fileMode>
        </fileSet>
    </fileSets>
</assembly>
