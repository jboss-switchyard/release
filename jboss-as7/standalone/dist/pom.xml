<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.switchyard</groupId>
        <artifactId>switchyard-as7-standalone-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>switchyard-as7-standalone-dist</artifactId>
    <packaging>jar</packaging>
    <name>SwitchYard: AS7 Distribution</name>
    <description>SwitchYard AS7 Distribution</description>
    <properties>
        <staging.dir>${project.build.directory}/jboss-switchyard</staging.dir>
        <redhat.eap6.dir>jboss-eap-${version.redhat.eap6}</redhat.eap6.dir>
        <staging.jboss.dir>${staging.dir}/${redhat.eap6.dir}</staging.jboss.dir>
        <staging.configs.dir>${staging.dir}/configs</staging.configs.dir>
        <distro.file>switchyard-${project.version}-EAP6.1.Alpha</distro.file>
        <distro.file.final>switchyard-${project.version}-EAP6.1.GA</distro.file.final>
        <distro.root.dir>/</distro.root.dir>
        <installer.root.dir>/switchyard-as7-installer-${version.distro}</installer.root.dir>
        <switchyard.jboss.home>${staging.jboss.dir}</switchyard.jboss.home>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.switchyard</groupId>
            <artifactId>switchyard-as7-standalone-bundle</artifactId>
            <type>zip</type>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jboss.as</groupId>
            <artifactId>jboss-as-dist</artifactId>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>org.jboss.arquillian.junit</groupId>
            <artifactId>arquillian-junit-container</artifactId>
            <scope>test</scope>
            <version>1.0.3.Final</version>
        </dependency>
        <dependency>
            <groupId>org.jboss.arquillian.container</groupId>
            <artifactId>arquillian-container-test-api</artifactId>
            <scope>test</scope>
            <version>1.0.3.Final</version>
        </dependency>
        <dependency>
            <groupId>org.jboss.as</groupId>
            <artifactId>jboss-as-arquillian-container-managed</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.as</groupId>
            <artifactId>jboss-as-arquillian-common</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.as</groupId>
            <artifactId>jboss-as-arquillian-testenricher-msc</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.as</groupId>
            <artifactId>jboss-as-arquillian-protocol-jmx</artifactId>
            <scope>test</scope>
        </dependency>
        <!-- CXF client dependencies -->
        <dependency>
            <groupId>org.jboss.ws.cxf</groupId>
            <artifactId>jbossws-cxf-client</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.ws.cxf</groupId>
            <artifactId>jbossws-cxf-factories</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.ws.cxf</groupId>
            <artifactId>jbossws-cxf-transports-httpserver</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-core</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-frontend-simple</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-frontend-jaxws</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-bindings-soap</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-bindings-xml</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-rt-databinding-jaxb</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>stage-jboss</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jboss.as</groupId>
                                    <artifactId>jboss-as-dist</artifactId>
                                    <type>zip</type>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${staging.dir}</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>stage-jboss-configs</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jboss.as</groupId>
                                    <artifactId>jboss-as-dist</artifactId>
                                    <type>zip</type>
                                    <overWrite>true</overWrite>
                                </artifactItem>
                            </artifactItems>
                            <includes>${redhat.eap6.dir}/standalone/configuration/standalone.xml, ${redhat.eap6.dir}/standalone/configuration/standalone-full.xml, ${redhat.eap6.dir}/standalone/configuration/standalone.xml, ${redhat.eap6.dir}/standalone/configuration/standalone-ha.xml, ${redhat.eap6.dir}/standalone/configuration/standalone.xml, ${redhat.eap6.dir}/standalone/configuration/standalone-full-ha.xml,${redhat.eap6.dir}/domain/configuration/domain.xml</includes>
                            <outputDirectory>${staging.configs.dir}</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-bundle</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.switchyard</groupId>
                                    <artifactId>switchyard-as7-standalone-bundle</artifactId>
                                    <type>zip</type>
                                    <version>${project.version}</version>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${staging.jboss.dir}</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-tests</id>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.switchyard</groupId>
                                    <artifactId>switchyard-as7-tests</artifactId>
                                    <type>test-jar</type>
                                    <version>${project.version}</version>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.testOutputDirectory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <forceCreation>true</forceCreation>
                    <transformationSets>
                        <transformationSet>
                            <dir>${staging.configs.dir}/${redhat.eap6.dir}/standalone/configuration</dir>
                            <includes>
                                <include>standalone.xml</include>
                                <include>standalone-ha.xml</include>
                                <include>standalone-full-ha.xml</include>
                                <include>standalone-full.xml</include>
                            </includes>
                            <outputDir>${staging.jboss.dir}/standalone/configuration</outputDir>
                            <stylesheet>${staging.jboss.dir}/xsl/standalone.xsl</stylesheet>
                        </transformationSet>
                        <transformationSet>
                            <dir>${staging.jboss.dir}/standalone/configuration</dir>
                            <includes>
                                <include>standalone-ha.xml</include>
                                <include>standalone-full-ha.xml</include>
                            </includes>
                            <outputDir>${staging.jboss.dir}/standalone/configuration</outputDir>
                            <stylesheet>${staging.jboss.dir}/xsl/standalone-ha.xsl</stylesheet>
                        </transformationSet>
                        <transformationSet>
                            <dir>${staging.configs.dir}/${redhat.eap6.dir}/domain/configuration</dir>
                            <includes>
                                <include>domain.xml</include>
                            </includes>
                            <outputDir>${staging.jboss.dir}/domain/configuration</outputDir>
                            <stylesheet>${staging.jboss.dir}/xsl/domain.xsl</stylesheet>
                        </transformationSet>
                        <transformationSet>
                            <dir>${staging.jboss.dir}/modules/system/layers/base/org/jboss/ws/spi/main</dir>
                            <includes>
                                <include>module.xml</include>
                            </includes>
                            <outputDir>${staging.jboss.dir}/modules/system/layers/base/org/jboss/ws/spi/main</outputDir>
                            <stylesheet>${staging.jboss.dir}/xsl/jbossws-spi_module.xsl</stylesheet>
                        </transformationSet>
                        <transformationSet>
                            <dir>${staging.jboss.dir}/modules/system/layers/base/org/jboss/as/webservices/main</dir>
                            <includes>
                                <include>module.xml</include>
                            </includes>
                            <outputDir>${staging.jboss.dir}/modules/system/layers/base/org/jboss/as/webservices/main</outputDir>
                            <stylesheet>${staging.jboss.dir}/xsl/jbossws-jboss720-server-integration_module.xsl</stylesheet>
                        </transformationSet>
                    </transformationSets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>assembly-dist</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <finalName>${distro.file}</finalName>
                            <descriptors>
                                <descriptor>${basedir}/assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                    <execution>
                        <id>assembly-full-dist</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <finalName>${distro.file.final}</finalName>
                            <descriptors>
                                <descriptor>${basedir}/assembly-final.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Configure the Surefire plugin for running the tests.  Be sure to make these same setting if running in your IDE... -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <argLine>-Xms512m -Xmx512m</argLine>
                    <environmentVariables>
                        <JBOSS_HOME>${switchyard.jboss.home}</JBOSS_HOME>
                        <SWITCHYARD_VERSION>${project.version}</SWITCHYARD_VERSION>
                    </environmentVariables>
                    <systemProperties>
                        <property>
                            <name>jboss.home</name>
                            <value>${switchyard.jboss.home}</value>
                        </property>
                        <property>
                            <name>module.path</name>
                            <value>${switchyard.jboss.home}/modules</value>
                        </property>
                        <property>
                            <name>server-config</name>
                            <value>standalone-full.xml</value>
                        </property>
                    </systemProperties>
                    <trimStackTrace>false</trimStackTrace>
                    <printSummary>true</printSummary>
                    <forkMode>always</forkMode>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
